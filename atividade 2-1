<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Calculadora PHP</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }

        form {
            margin: 20px auto;
        }

        input {
            margin: 5px;
            padding: 5px;
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #333;
            padding: 8px;
        }

        th {
            background: #0077cc;
            color: white;
        }

        .erro {
            color: red;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <?php
    $resultados = "";
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        $num1 = $_POST["num1"];
        $num2 = $_POST["num2"];

        
        if ($num1 !== "" && $num2 !== "") {
            $soma = $num1 + $num2;
            $sub = $num1 - $num2;
            $mult = $num1 * $num2;
            $div = ($num2 != 0) ? $num1 / $num2 : "Divisão por zero!";
            $resto = ($num2 != 0) ? $num1 % $num2 : "Indefinido";

            
            $resultados = "
        <table>
            <tr><th>Operação</th><th>Resultado</th></tr>

            <tr><td>Soma</td><td>$soma</td></tr>

            <tr><td>Subtração</td><td>$sub</td></tr>

            <tr><td>Multiplicação</td><td>$mult</td></tr>

            <tr><td>Divisão</td><td>$div</td></tr>

            <tr><td>Resto</td><td>$resto</td></tr>
        </table>";
        } else {
            $resultados = "<p class='erro'>Preencha todos os campos!</p>";
        }
    }
    ?>

    <h1>Calculadora de Operações</h1>
    <form method="post">
        <input type="number" name="num1" placeholder="Número 1">
        <input type="number" name="num2" placeholder="Número 2">
        <button type="submit">Calcular</button>
    </form>
    <?php echo $resultados; ?>

</body>

</html>
